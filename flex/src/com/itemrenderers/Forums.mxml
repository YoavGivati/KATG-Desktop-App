<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" click="navigateToURL(new URLRequest(data.link))" 
				toolTip="{data.description}" useHandCursor="true" buttonMode="true">
	
	<s:RichText y="2" id="txt_title" height="12" fontWeight="bold" text="{data.title}: " width="{this.width-15}"/>
	<s:RichText height="15" id="txt_author" y="{13}" fontSize="10" text="started by: {data.creator}" width="{this.width-15}"/>
	
	
</s:ItemRenderer>
